<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="start"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/message_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="lorem ipsum dolor sit amet"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/recieved_message_background"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3:00pm"
        app:layout_constraintTop_toBottomOf="@id/message_txt"
        app:layout_constraintEnd_toEndOf="@id/message_txt"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ahmed abdelaziz"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@id/message_txt"
        app:layout_constraintStart_toStartOf="@id/message_txt"/>
</androidx.constraintlayout.widget.ConstraintLayout>